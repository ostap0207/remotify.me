<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CommandActivity">

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/tryBtn"
        android:layout_alignLeft="@+id/button5"
        android:layout_toLeftOf="@+id/strut"
        android:layout_below="@+id/strut"
        android:layout_above="@+id/button5" />

    <Button
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/tryBtn"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/strut"
        android:layout_alignBottom="@+id/tryBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Space"
        android:id="@+id/button5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Files"
        android:id="@+id/file_list"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignRight="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/button2"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/tryBtn"
        android:layout_above="@+id/file_list"
        android:layout_alignRight="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startBtn"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/file_list"
        android:layout_alignRight="@+id/tryBtn" />

</RelativeLayout>
